<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="12dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView_name"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="11dp"
        android:text="Organization"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/textView_description"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textSize="12sp"
        android:layout_below="@+id/textView_name"
        android:layout_alignParentEnd="true" />

    <TextView
        android:textSize="18sp"
        android:textAlignment="center"
        android:id="@+id/domain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Domain"
        android:textStyle="bold"
        android:layout_marginTop="29dp"
        android:layout_below="@+id/textView_description"
        android:layout_alignParentStart="true" />

    <TextView
        android:textSize="18sp"
        android:textAlignment="center"
        android:id="@+id/count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Count"
        android:textStyle="bold"
        android:layout_below="@+id/domain"
        android:layout_alignStart="@+id/address" />

    <TextView
        android:id="@+id/monday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Monday: Morning"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/address"
        android:layout_alignStart="@+id/textView_name" />

    <TextView
        android:id="@+id/tuesday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tuesday: Morning, Evening"
        android:layout_below="@+id/monday"
        android:layout_alignStart="@+id/monday" />

    <TextView
        android:id="@+id/wednesday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Wednesday:"
        android:layout_below="@+id/tuesday"
        android:layout_alignStart="@+id/tuesday" />

    <TextView
        android:id="@+id/thursday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thursday:"
        android:layout_below="@+id/wednesday"
        android:layout_alignStart="@+id/wednesday" />

    <TextView
        android:id="@+id/friday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Friday: Evening"
        android:layout_below="@+id/thursday"
        android:layout_alignStart="@+id/thursday" />

    <TextView
        android:id="@+id/saturday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Saturday: Morning, Afternoon, Evening"
        android:layout_below="@+id/friday"
        android:layout_alignStart="@+id/friday" />

    <TextView
        android:id="@+id/sunday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sunday: Evening"
        android:layout_below="@+id/saturday"
        android:layout_marginBottom="20dp"
        android:layout_alignStart="@+id/saturday" />

    <TextView
        android:textSize="15sp"
        android:id="@+id/contact"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:text="Contact"
        android:layout_below="@+id/count"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/website"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Website"
        android:textSize="15sp"
        android:layout_below="@+id/contact"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/address"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Address"
        android:textSize="15sp"
        android:layout_below="@+id/website"
        android:layout_alignParentStart="true" />

</RelativeLayout>